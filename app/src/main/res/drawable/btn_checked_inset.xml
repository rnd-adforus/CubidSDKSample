<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_checked="false">
        <inset
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetTop="4dp"
            android:insetBottom="4dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/interaction_amber_soft" />
                <corners android:radius="8dp" />
            </shape>
        </inset>
    </item>

    <item android:state_enabled="true" android:state_checked="true">
        <inset
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetTop="4dp"
            android:insetBottom="4dp">
            <shape android:shape="rectangle">
                <stroke android:width="2dp" android:color="@color/interaction_amber"/>
                <solid android:color="@color/interaction_amber_soft" />
                <corners android:radius="8dp" />
            </shape>
        </inset>
    </item>

    <item>
        <inset
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetTop="4dp"
            android:insetBottom="4dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/interaction_amber" />
                <corners android:radius="8dp" />
            </shape>
        </inset>
    </item>

</selector>
