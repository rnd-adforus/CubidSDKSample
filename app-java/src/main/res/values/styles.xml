<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBaseButton" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@drawable/btn_inset</item>
<!--        <item name="android:backgroundTint">@color/light_button</item>-->
        <item name="android:textColor">@drawable/enable_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="CustomCompoundButton" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@drawable/btn_checked_inset</item>
<!--        <item name="android:backgroundTint">@color/light_button</item>-->
        <item name="android:textColor">@drawable/enable_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">1dp</item>

    </style>
    <style name="CustomAlertDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textSize">14sp</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimAmount">0.1</item>
        <item name="android:windowBackground">@drawable/dialog_rounded</item>
    </style>
</resources>