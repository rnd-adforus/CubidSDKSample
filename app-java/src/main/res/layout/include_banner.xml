<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:paddingVertical="5dp"
    android:background="@drawable/box_round">
    <LinearLayout
        android:id="@+id/box_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="10dp">
        <com.adforus.cubidsdksample.StatusView
            android:id="@+id/box_status"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/text_banner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/title_ad_banner"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/box_status"
            app:layout_constraintTop_toTopOf="parent"/>
        <ToggleButton
            android:id="@+id/arrow_ad_function"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textOn=""
            android:textOff=""
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/extends_btn"
            android:background="@drawable/arrow_forward"
            android:backgroundTint="@color/dim_gray"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/box_function_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_below="@id/box_content">
        <TextView
            android:id="@+id/banner_size_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/size_radio_button"
            android:layout_alignBottom="@+id/size_radio_button"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="Size Setting :"
            android:textSize="15sp" />
        <RadioGroup
            android:id="@+id/size_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/banner_size_text"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">
            <RadioButton
                android:id="@+id/radio_320X50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:checked="true"
                android:textSize="13dp"
                android:text="320X50"/>
            <RadioButton
                android:id="@+id/radio_320X100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textSize="13dp"
                android:text="320X100"/>
            <RadioButton
                android:id="@+id/radio_300X250"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="300X250"/>
        </RadioGroup>
        <include
            android:id="@+id/box_btns_and_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            layout="@layout/include_btns_attach_view"
            android:layout_below="@+id/size_radio_button"/>
    </RelativeLayout>



</RelativeLayout>